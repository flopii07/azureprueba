{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "formRecognizerAccountName": {
            "type": "string",
            "metadata": {
                "description": "Nombre del Form Recognizer"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus",
            "metadata": {
                "description": "Ubicaci√≥n del recurso"
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "S0",
            "metadata": {
                "description": "Tipo de SKU para el Form Recognizer"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2021-04-30",
            "name": "[parameters('formRecognizerAccountName')]",
            "location": "[parameters('location')]",
            "kind": "FormRecognizer",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "properties": {
                "apiProperties": {
                    "qnaRuntimeEndpoint": ""
                },
                "customSubDomainName": "[parameters('formRecognizerAccountName')]"
            },
            "tags": {
                "project": "FormRecognizerDeployment"
            }
        }
    ]
}
